{% extends "base.html.twig" %}

{% block body %}
	<!-- start: content slider-->
	<section class="content-slider">
		<div class="flexslider">
			<ul class="slides">
				{% for collection in collections %}
					<li>
						<div class="row max-inner">
							<div class="columns col-12 slide-image"><img src="{{ asset('images/slide-image-' ~ collection.imageid ~ '.jpg') }}"/></div>
							<div class="columns col-12 col-centered slide-content">
								<h2>{{ collection.name }}</h2>
								<h3>{{ collection.description }}</h3>
								<a href="{{ path('shop.collection', {collectionid: collection.id}) }}" class="btn cta">See the collection</a>
							</div>
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</section>
	<!-- end: content slider-->


	<!-- start: product grid -->
	<section class="product-grid">

		<header class="row section-header max-inner">
			<div class="columns-12 col-centered">
				<h2>Featured Products</h2><hr/>
			</div>
		</header>

		<div class="rowmax-inner">
			{% for product in products %}
				<div class="columns col-3 grid-item">
					<div class="grid-item-media">
						<a href="{{ path("shop.product", {id: product.id}) }}"><img src="images/grid-item-image-{{ product.image }}.jpg"/></a>
					</div>
					<div class="grid-item-desc">
						<h2>
							<a class="grid-item-link" href="{{ path("shop.product", {id: product.id}) }}">
								<span class="grid-item-meta">{{ product.brandname }}</span><hr/>
								<span class="grid-item-title">{{ product.name }}</span>
								<span class="grid-item-price">${{ product.price|number_format(2, '.', '') }}</span>
							</a>
						</h2>
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="row section-header max-inner">
			<div class="columns-12 col-centered" style="display: flex; justify-content: center;">
				<a href="{{ path('shop.collection') }}" class="btn cta">See more from collection</a>
			</div>
		</div>
	</section>
	<!-- end: product grid -->
{% endblock %}
